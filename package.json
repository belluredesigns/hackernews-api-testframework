{
  "name": "hackernews-api-testframework",
  "version": "1.0.0",
  "description": "Production-grade API Test Framework for HackerNews API using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report reports/html",
    "test:dev": "TEST_ENV=dev playwright test",
    "test:staging": "TEST_ENV=staging playwright test",
    "test:production": "TEST_ENV=production playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:negative": "playwright test --grep @negative",
    "test:performance": "playwright test --grep @performance",
    "test:security": "playwright test --grep @security",
    "test:parallel": "playwright test --workers=10",
    "test:coverage": "nyc --reporter=html --reporter=text playwright test",
    "clean": "rm -rf reports test-results playwright-report dist coverage .nyc_output",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "hackernews",
    "test-framework",
    "typescript",
    "test-automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "ajv": "^8.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "msw": "^2.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
